# Resend API Configuration (works on Render's free tier)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Sender Email (must be verified in Resend)
# You can use your Gmail or any email you verify in Resend
GMAIL_USER=your-email@gmail.com

# Admin Email (where you receive notifications)
# If not set, will use GMAIL_USER
ADMIN_EMAIL=your-email@gmail.com

# Server Port (Render will set this automatically)
PORT=3000

